# --- GENERAL SETTINGS ---
# Environment: local or vps
DEPLOY_MODE=local

# Domain or IP for VPS (e.g. cloud.yourdomain.com)
# For local, use 'localhost'
DOMAIN=localhost
OFFICE_DOMAIN=office.localhost

# Main access port (Local: 8080, VPS: 80 or 443)
HTTP_PORT=8080
HTTPS_PORT=443

# Email for SSL certificates (VPS mode only)
ADMIN_EMAIL=admin@example.com

# --- DATABASE (MariaDB) ---
DB_ROOT_PASSWORD=change_me_root
DB_NAME=nextcloud
DB_USER=nextcloud
DB_PASSWORD=change_me_db

# --- REDIS ---
REDIS_PASSWORD=change_me_redis

# --- NEXTCLOUD ---
# Admin initial credentials
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=change_me_nextcloud

# --- ONLYOFFICE ---
# JWT Secret for security (mandatory)
ONLYOFFICE_JWT_SECRET=change_me_jwt
ONLYOFFICE_PORT=8081

# --- DOCKER IMAGES ---
# Using standard docker hub images to avoid ghcr.io issues
NEXTCLOUD_IMAGE=nextcloud:28-apache
ONLYOFFICE_IMAGE=onlyoffice/documentserver:latest
MARIADB_IMAGE=mariadb:10.11
REDIS_IMAGE=redis:alpine
NGINX_IMAGE=nginx:alpine
